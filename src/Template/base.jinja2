<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-COMPATIBLE" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Harvest Schedule</title>

    {% include 'html_dependencies.jinja2' %}

</head>
<body>

<nav class="navbar navbar-default">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
                    data-target="#navbar" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/" title="Home">Harvest Schedules</a>
        </div>

        <div id="navbar" class="navbar-collapse collapse">
            {% if session['email'] %}
            <ul class="nav navbar-nav">
                <li><a href="{{ url_for('events.index') }}"><span class="glyphicon glyphicon-calendar"></span> Events</a></li>
            </ul>
            {% endif %}
            {% if session['email'] %}
                <ul class="nav navbar-nav navbar-right">
                <!--todo: Create a member Management view and module -->
                <li><a href="{{ url_for('admin.logout_user') }}"><span class="glyphicon glyphicon-log-out"></span> Log out</a></li>
            </ul>
            {% else %}
            <ul class="nav navbar-nav navbar-right">
                <li><a href="{{ url_for('admin.login_user') }}"><span class="glyphicon glyphicon-log-in"></span> Log in</a></li>
            </ul>
            {% endif %}
        </div>

    </div>
</nav>
<div class="content container">
    {% block content %}

    {% endblock %}
</div>

</body>
</html>