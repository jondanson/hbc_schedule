{% extends "base.jinja2" %}
{% block content %}
    <div class="page-header">
        <h1>Create Event</h1>
        <small> </small>
    </div>
    <div class="form-size">
        <form method="post">
            <div class="form-group">
                <label for="title">Event name</label>
                <input type="text" class="form-control" id="title" name="title"
                       placeholder="Event Name (Sunday Morning Service)">
            </div>
            <div class="form-group">
                <label for="day_of_event">Date of Event</label>
                <input type="text" id="datetimepicker2" data-format="yy-mm-dd" class="form-control" name="day_of_event"
                       placeholder="2016-1-1">
            </div>
            <div class="form-group">
                <label for="ministry">Ministry</label>
                <input type="text" id="ministry" class="form-control" name="ministry"
                       placeholder="Little Blessings, Choir, Security, etc.">
            </div>
            <div class="form-group">
                <label class="col-xs control-label" for="assigned_members">Members</label>
                <div class="'col-xs-5">
                <select id="assigned_members" class="form-control mobileSelect"  multiple name="assigned_members">
                    {% for member in members %}
                        <option value="{{ member._id }}">{{ member.first_name }} {{ member.last_name }} {{ member.email }}</option>
                    {% endfor %}
                </select>
                </div>
                <p id="assigned_members" class="help-block">Hold CTRL/CMD to select more than one</p>
            </div>
            <button class="btn btn-default" type="submit">Schedule</button>
        </form>
    </div>


{% endblock %}